<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_interpolator">
    <alpha 
        android:fromAlpha="0.1"
        android:toAlpha="1.0"
        android:duration="500"
        />
    <scale 
        android:fromXScale="0"
        android:toXScale="1"
        android:fromYScale="1"
        android:toYScale="1"
        android:pivotX="50"
        android:pivotY="50"
        android:duration="500"
        />
    
   </set>