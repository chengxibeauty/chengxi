<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_interpolator">
    <alpha 
        android:fromAlpha="1.0"
        android:toAlpha="0.1"
        android:duration="500"
        />
    <scale 
        android:fromXScale="1"
        android:toXScale="0"
         android:fromYScale="1"
        android:toYScale="1"
        android:pivotX="50"
         android:pivotY="50"
        android:duration="500"
        />
    
   </set>
